---
interface Props {
    title: string,
    bg_color: string,
    id?: string,
    href?:string,
    target?:string,
    download?: string
};


const {title,bg_color, id, href, target,download } = Astro.props;

---
<a target={target} href={href} {download} id={id} class="relative cursor-pointer px-6 py-3 my-5 w-fit h-fit block font-bold text-black group">
    <span class=`absolute inset-0 w-full h-full transition duration-300 ease-out transform -translate-x-2 -translate-y-2 ${bg_color}  group-hover:translate-x-0 group-hover:translate-y-0`></span>
    <span class="absolute inset-0 w-full h-full border-2 border-black "></span>
    <span class="relative">{title}</span>
</a>